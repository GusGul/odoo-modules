<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_library_profile" model="ir.actions.act_window">
    <field name="name">Biblioteca</field>
    <field name="res_model">library</field>
    <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="library_root_menu" name="Biblioteca" />
    <menuitem id="library_sub_menu" action="action_library_profile" parent="library_root_menu" name="Livros"/>

    <record id="library_list_view" model="ir.ui.view">
        <field name="name">library.list.view</field>
        <field name="model">library</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="author_id" />
                <field name="stock" />
                <field name="price" />
            </tree>
        </field>
    </record>

    <record id="library_form_view" model="ir.ui.view">
        <field name="name">library.form.view</field>
        <field name="model">library</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" />
                        <field name="author_id" options="{'no_create':True}" />
                        <field name="price" />
                        <field name="currency_id" />
                    </group>
                    <group>
                        <field name="pages" />
                        <field name="publisher" readonly="1"/>
                        <field name="release_date" />
                        <field name="age_days" />
                    </group>
                </group>
                <group>
                    <field name="stock" />
                    <field name="category_ids" widget="many2many_tags" />
                    <field name="description" widget="html" />
                </group>
            </form>
        </field>
    </record>

</odoo>