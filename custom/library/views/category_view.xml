<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Categorias</field>
        <field name="res_model">category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="category_sub_menu" action="action_category" parent="library.library_root_menu"
              name="Categorias" />

    <record id="category_list_view" model="ir.ui.view">
        <field name="name">Lista de Categorias</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="category_form_view" model="ir.ui.view">
        <field name="name">category.form.view</field>
        <field name="model">category</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                </group>
            </form>
        </field>
    </record>

</odoo>