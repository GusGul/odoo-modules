<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_author_profile" model="ir.actions.act_window">
        <field name="name">Autores</field>
        <field name="res_model">author.profile</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="author_profile_sub_menu" action="action_author_profile" parent="library.library_root_menu"
              name="Autores"/>

    <record id="author_profile_list_view" model="ir.ui.view">
        <field name="name">Autores</field>
        <field name="model">author.profile</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="count_books" />
            </tree>
        </field>
    </record>

    <record id="author_profile_form_view" model="ir.ui.view">
        <field name="name">author.profile.form.view</field>
        <field name="model">author.profile</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="count_books" />
                </group>
            </form>
        </field>
    </record>

    <record id="author_profile_extend_form_view" model="ir.ui.view">
        <field name="name">author.profile.extend.form.view</field>
        <field name="model">author.profile</field>
        <field name="inherit_id" ref="author_profile_form_view"/>
        <field name="arch" type="xml">
            <field name="count_books" position="after">
                <field name="book_list" string="Livros">
                    <tree editable="top">
                        <field name="name" />
                    </tree>
                    <form>
                        <group>
                            <field name="name" />
                        </group>
                    </form>
                </field>
            </field>
        </field>
    </record>

</odoo>