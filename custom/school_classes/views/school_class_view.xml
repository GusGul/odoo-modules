<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="school_class_list_view" model="ir.ui.view">
        <field name="name">Lista de Aulas</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="school_class_form_view" model="ir.ui.view">
        <field name="name">school.class.form.view</field>
        <field name="model">school.class</field>
        <field name="arch" type="xml">
            <form>
                <button name="customGet" string="botÃ£o" type="object"/>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="student_ids">
                            <tree>
                                <field name="id"/>
                                <field name="roll_number"/>
                                <field name="name"/>
                                <field name="school_id"/>
                            </tree>
                        </field>
                    </group>
                    <group></group>
                    
                </group>
            </form>
        </field>
    </record>

    <record id="action_school_class" model="ir.actions.act_window">
        <field name="name">Lista de Aulas</field>
        <field name="res_model">school.class</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_class_root_menu" name="Aulas" web_icon="school_classes,static/description/icon.png"/>
    <menuitem id="school_class_submenu" name="Menu" parent="school_class_root_menu" />
    <menuitem id="school_class_menu" name="Lista de Aulas" parent="school_class_submenu" action="action_school_class"/>

</odoo>