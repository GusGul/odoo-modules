<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="action_school_student_profile" model="ir.actions.act_window">
        <field name="name">Dados dos Estudantes</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="school_student_root_menu" name="Estudantes" />
    <menuitem id="school_student_sub_menu" action="action_school_student_profile" parent="school_student_root_menu"
              name="Dados dos Estudantes" />

    <record id="school_student_list_view" model="ir.ui.view">
        <field name="name">school.student.list.view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="school_id" />
                <field name="currency_id" invisible="1" />
                <field name="is_virtual_school" />
                <field name="age" />
            </tree>
        </field>
    </record>

    <record id="school_student_form_view" model="ir.ui.view">
        <field name="name">school.student.form.view</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form>
                <button name="custom_button_method" string="CLIQUE EM MIM!" type="object" /> <!-- sempre que estiver
                lidando com custom methods, usa-se o type="object". -->
                <group>
                    <group>
                        <field name="name" />
                        <field name="currency_id" options="{'no_create':True}" />
<!--                        "{'no_create_edit':True, 'no_open':True, 'no_quick_create':True}"/>-->
                        <field name="school_id" /> <!-- options="{'no_create':True}" widget="selection" -->
<!--                    condição para aparecer somente escolas com True | domain="[('is_virtual_class','=',True)]"-->
                        <field name="school_address" string="School Address" />
                        <field name="hobby_list" widget="many2many_checkboxes"/>
                        <field name="student_fees" /> <!-- é possível transformar um float em monetary com widgets -->
                        <field name="active" invisible="1" />
                    </group>
                    <group>
                        <field name="birthDate" attrs="{'invisible':[('student_fees','=',0)]}"/>
                        <field name="age" readonly="1" attrs="{'invisible':[('birthDate','=','')]}" />
                    </group>
                </group>
            </form>
        </field>
    </record>

</odoo>